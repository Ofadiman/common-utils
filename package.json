{
  "name": "@ofadiman/common-utils",
  "version": "0.1.0",
  "author": {
    "email": "ofadiman@gmail.com",
    "name": "Szymon Jaworski",
    "url": "https://github.com/Ofadiman"
  },
  "description": "Common utilities for use in Browser and NodeJS based applications.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -b tsconfig.build.json",
    "eslint-check": "eslint src/**/*.ts",
    "eslint-fix": "eslint src/**/*.ts --fix",
    "postinstall": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "postversion": "git push --follow-tags",
    "prepublishOnly": "pinst --disable",
    "prettier": "prettier --write .",
    "preversion": "scripts/check-branch.sh",
    "syncpack-format": "syncpack format",
    "test": "jest",
    "test-ci": "CI=true jest",
    "test-coverage": "rimraf coverage && CI=true jest --collectCoverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@ofadiman/eslint-config-base": "^0.1.8",
    "@prettier/plugin-xml": "^0.13.1",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.22.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-simple-import-sort": "^6.0.1",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-typescript-sort-keys": "^1.5.0",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^6.0.0",
    "hygen": "^6.1.0",
    "is-ci": "^3.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "pinst": "^2.1.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "syncpack": "^5.7.11",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "bugs": "https://github.com/Ofadiman/common-utils/issues",
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "LICENSE",
    "dist"
  ],
  "keywords": [
    "browser",
    "javascript",
    "nodejs",
    "typescript",
    "utils"
  ],
  "lint-staged": {
    "*.{md,html,css}": "prettier --write",
    "*.{ts,tsx}": "eslint --fix"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": "Ofadiman/common-utils",
  "sideEffects": false
}
